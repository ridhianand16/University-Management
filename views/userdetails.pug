extends layout

block content
    div.text-center
        form(class="form-signin" method="POST",action="/users/courseList") 
            div.text-center
                p Welcome #{username}!

                p Select a minimum of 2 courses
                each val, index in data
                    div.checkbox-inline
                        input.checkbox-input(type='checkbox', name="course", value=val, id=val,class="form-check-input")
                        label(for=val.code class="form-check-label" )= val.subject
                br
                br
                - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                button(class=buttonClass type="submit") Go
                br
                br

                p #{message}
                script.
                    username="#{username}";
                a(href='/logout') Logout 

